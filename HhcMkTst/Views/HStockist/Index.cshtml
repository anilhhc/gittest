@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/MyScripts/AngularCode.js"></script>
<style>
    .btn-space{
        margin-left:-5%;
        background-color:cornflowerblue;
        font-size:large;
    }
</style>
<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()" class="divList">
        <div class="form-horizontal" role="form">
            <form name="addStockist" style="width: 600px; margin: 0px auto;">
                    <div class="row">
                        <h2>
                            <span id="spn">Add New Stockist</span>
                        </h2>
                    </div>
                    <div>
                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">FName:</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" id="hsfullname" placeholder="fullname" ng-model="hsfullname">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">LName:</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" id="hslastname" placeholder="LastName" ng-model="hslastname">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-4">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Age:</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" id="hsemailid" placeholder="Email" ng-model="hsemailid">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-4 form-group btn-space">
                            <input type="button" id="btnSave" ng-disabled="!addStockist.$valid" class="form-control btn-space" value="Submit" ng-click="InsertData()" />
                        </div>
                    </div>
                </form>
</div>

        <p class="divHead">List of Stockists</p>
        <table  class="table table-bordered table-hover">
            <tr>
                <td>
                    <b>hsfullname</b>
                </td>
                <td>
                    <b>hslastname</b>
                </td>
                <td>
                    <b>hsemailid</b>
                </td>
                <td>
                    <b>hsmobile</b>
                </td>
                <td>hspwd</td>
                <td>hssapcustomerid</td>
                <td>
                    <b>Actions</b>
                </td>
            </tr>
            <tr ng-repeat="Emp in employees">
                <td>
                    {{Emp.hsfullname}}
                </td>
                <td>
                    {{Emp.hslastname}}
                </td>
                <td>
                    {{Emp.hsemailid}}
                </td>
                <td>
                    {{Emp.hsmobile}}
                </td>
                <td>{{Emp.hspwd}}</td>
                <td>{{Emp.hssapcustomerid}}</td>
                <td>
                    <input type="button" class="btn btn-warning" value="Update" ng-click="UpdateEmp(Emp)" />
                    <input type="button" class="btn btn-danger" value="Delete" ng-click="DeleteEmp(Emp)" />
                </td>
            </tr>
        </table>
     


    </div>
    @Html.Hidden("EmpID_")

</div>  
