@model HhcTst.Models.StockistLoginVM

@{
    ViewBag.Title = "Login";
    Layout = null;
    //Layout = "~/Views/Shared/StockistLayout.cshtml";
}

<div class="container"
     style="padding-right:0px; margin-top:165px; margin-left:500px;">
    <div class="row">
        <div class="col-lg-12"
             style="width:400px; height:250px;">
            <div class="col-lg-6">
                <a href='@Url.Action("Login", "Stockist")'>
                    <img src='@Url.Content("~/Content/Images/HhcLogo.png")' />
                </a>
            </div>
            <div class="col-lg-6">
                @using (Html.BeginForm("Login", "Stockist", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <fieldset class="align-center">
                        <legend>Stockist Login</legend>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @if (@ViewBag.Message != null)
                        {
                            <div style="border: 1px solid red">
                                @ViewBag.Message
                            </div>
                        }
                        <table class="table-responsive table">
                            <tr>
                                <td>@Html.LabelFor(a => a.StockistName)</td>
                                <td>@Html.TextBoxFor(a => a.StockistName)</td>
                                <td>@Html.ValidationMessageFor(a => a.StockistName)</td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(a => a.Password)
                                </td>
                                <td>
                                    @Html.PasswordFor(a => a.Password)
                                </td>
                                <td>
                                    @Html.ValidationMessageFor(a => a.Password)
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <input type="submit" class="btn-group-lg" value="Login" />
                                </td>
                                <td>
                                @Html.ActionLink("Register","Register")
                                </td>
                            </tr>
                        </table>
                    </fieldset>

                   

                    @*@section RightSection{
                            <h1>This is i right part of display</h1>
                        }*@
                        @*@section footer{
                                <p class="lead">
                                    This is footer section here.
                                </p>
                            }*@
                }
            </div>
           

        </div>
    </div>
</div>
